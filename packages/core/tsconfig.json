{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6"],
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "removeComments": true,
    "skipLibCheck": true,
    "incremental": true,
    "sourceMap": true,

    "rootDir": "./src",
    "outDir": "./dist"
  }
}
